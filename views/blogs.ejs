<%- include("partials/navbar.ejs") %>

    <div class="section-title about">
        <span>ALL BLOGS</span>
    </div>

    <div class="allblogs-row">
        <% blogs.forEach(function(blog) { %>
            <div class="blog">
                <img class="blog-img" src="<%= blog.image %>" alt="Blog Image" />
                <p class="blog-date">
                    <%= new Date(blog.date).toLocaleDateString("en-US", { year: "numeric" , month: "long" ,
                        day: "numeric" }) %>
                </p>
                <p class="blog-title">
                    <%= blog.title %>
                </p>
                <a href="/blog/<%= blog.id %>">
                    <button class="btn" id="seemore-btn">SEE MORE</button>
                </a>
                <div class="edit-del">
                    <a class="edit" href="/blog/edit/<%= blog.id %>">Edit</a>
                    <form class="delete-btn" action="/blog/delete/<%= blog.id %>"  method="POST"  onsubmit="return confirmDelete();">
                        <input class="delete" type="submit"  value="Delete">
                    </form>
                </div>
            </div>
            <% }); %>
    </div>

    <div class="section-divider">
        <div class="star-container">
            <img class="star" src="/images/star.png" />
            <img id="star" src="/images/star.png" />
            <img class="star" src="/images/star.png" />
        </div>
    </div>
    </div>


    <%- include("partials/footer.ejs") %>

    <script>
        function confirmDelete(){
            return confirm("Are you sure you want to delete this blog?");
        }
    </script>